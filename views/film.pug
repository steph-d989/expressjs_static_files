doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/style.css")
        title Document
        
    body
        include ./header.pug

        main
            h1 Aqui tienes vista de las peliculas
            section
                h3 Lista de peliculas
            section
                each film in Films
                    article
                        p Título: #{film.Title}
                        p Director: #{film.Director}
                        p Año: #{film.Year}
                        img(src=film.Poster, alt=film.Title width="300")   

           
        include ./footer.pug
        script(src="/script.js")